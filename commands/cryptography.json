{
  "checks": [
    {
      "category": "CRYPTOGRAPHY",
      "label": "Device Encryption",
      "command": "getprop ro.crypto.state",
      "safe_pattern": "encrypted",
      "level": "critical",
      "description": "Device storage should be encrypted"
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Encryption Type",
      "command": "getprop ro.crypto.type",
      "safe_pattern": "file|block",
      "level": "info",
      "description": "Type of encryption used (file-based or block)"
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Hardware Keystore",
      "command": "getprop ro.hardware.keystore",
      "safe_pattern": ".",
      "level": "info",
      "description": "Hardware-backed keystore availability"
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Crypto FS State",
      "command": "getprop vold.decrypt",
      "safe_pattern": "trigger_restart_framework|null",
      "level": "info",
      "description": "Filesystem decryption state"
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "StrongBox Support",
      "command": "getprop ro.hardware.keystore_desede",
      "safe_pattern": ".",
      "level": "info",
      "description": "StrongBox secure element support"
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Hardcoded Passwords in Config",
      "command": "find /system /vendor /data -type f \\( -name '*.conf' -o -name '*.cfg' -o -name '*.ini' -o -name '*.properties' \\) -exec grep -l -i 'password\\|passwd\\|pwd=' {} \\; 2>/dev/null | head -10",
      "safe_pattern": "^$",
      "level": "critical",
      "description": "Config files containing passwords - CRITICAL",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "API Keys in Files",
      "command": "find /system /vendor /data -type f \\( -name '*.json' -o -name '*.xml' -o -name '*.conf' \\) -exec grep -l -iE 'api_key|apikey|api-key|secret_key|secretkey|access_token' {} \\; 2>/dev/null | head -10",
      "safe_pattern": "^$",
      "level": "critical",
      "description": "Files containing API keys or secrets",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Private Keys Exposed",
      "command": "find /system /vendor /data /sdcard -type f \\( -name '*.pem' -o -name '*.key' -o -name '*.p12' -o -name '*.pfx' \\) 2>/dev/null | head -10",
      "safe_pattern": "^$",
      "level": "critical",
      "description": "Private key files found - should be protected",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "SSH Keys on Device",
      "command": "find /data /sdcard -name 'id_rsa*' -o -name 'id_ed25519*' -o -name 'authorized_keys' 2>/dev/null",
      "safe_pattern": "^$",
      "level": "warning",
      "description": "SSH keys found - review if needed",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Default Credential Files",
      "command": "find /system /vendor -type f \\( -name 'passwd' -o -name 'shadow' -o -name 'credentials*' \\) 2>/dev/null",
      "safe_pattern": "^$",
      "level": "critical",
      "description": "Credential files in system - check permissions",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Hardcoded URLs with Credentials",
      "command": "find /system /vendor /data -type f \\( -name '*.conf' -o -name '*.json' -o -name '*.xml' \\) -exec grep -l -E 'https?://[^:]+:[^@]+@' {} \\; 2>/dev/null | head -5",
      "safe_pattern": "^$",
      "level": "critical",
      "description": "URLs with embedded credentials found",
      "empty_is_safe": true
    },
    {
      "category": "CRYPTOGRAPHY",
      "label": "Database Files with Potential Secrets",
      "command": "find /data -name '*.db' -o -name '*.sqlite' 2>/dev/null | head -10",
      "safe_pattern": ".",
      "level": "info",
      "description": "Database files - may contain sensitive data"
    }
  ]
}