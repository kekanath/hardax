{
  "checks": [
    {
      "category": "INPUT",
      "label": "Accessibility Services Enabled",
      "command": "settings get secure enabled_accessibility_services",
      "safe_pattern": "^$|null",
      "level": "warning",
      "description": "Accessibility services can monitor all input and screen content"
    },
    {
      "category": "INPUT",
      "label": "Touch Exploration",
      "command": "settings get secure touch_exploration_enabled",
      "safe_pattern": ".",
      "level": "info",
      "description": "Touch exploration for accessibility"
    },
    {
      "category": "INPUT",
      "label": "High Text Contrast",
      "command": "settings get secure high_text_contrast_enabled",
      "safe_pattern": ".",
      "level": "info",
      "description": "High contrast text setting"
    },
    {
      "category": "INPUT",
      "label": "Screen Magnification",
      "command": "settings get secure accessibility_display_magnification_enabled",
      "safe_pattern": ".",
      "level": "info",
      "description": "Screen magnification status"
    },
    {
      "category": "INPUT",
      "label": "Default Input Method",
      "command": "settings get secure default_input_method",
      "safe_pattern": ".",
      "level": "info",
      "description": "Default keyboard/input method"
    },
    {
      "category": "INPUT",
      "label": "Enabled Input Methods",
      "command": "settings get secure enabled_input_methods",
      "safe_pattern": ".",
      "level": "info",
      "description": "All enabled input methods - third party keyboards can log keystrokes"
    },
    {
      "category": "INPUT",
      "label": "Spell Checker Enabled",
      "command": "settings get secure spell_checker_enabled",
      "safe_pattern": ".",
      "level": "info",
      "description": "Spell checker may send typed text to cloud"
    },
    {
      "category": "INPUT",
      "label": "Voice Input Service",
      "command": "settings get secure voice_interaction_service",
      "safe_pattern": ".",
      "level": "info",
      "description": "Voice input service configuration"
    },
    {
      "category": "INPUT",
      "label": "No 3rd party keyboards installed",
      "command": "pm list packages -3 2>/dev/null | grep -i 'keyboard\\|input\\|ime' | grep -v 'com.android\\|com.google\\|com.samsung'",
      "safe_pattern": "^$",
      "level": "warning",
      "description": "Third-party keyboards can log keystrokes",
      "empty_is_safe": true
    }
  ]
}