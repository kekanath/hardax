{
  "checks": [
    {
      "category": "SIM SECURITY",
      "label": "SIM Card Present",
      "command": "getprop gsm.sim.state",
      "safe_pattern": "^READY$",
      "level": "info",
      "description": "SIM card status"
    },
    {
      "category": "SIM SECURITY",
      "label": "SIM PIN Lock Enabled",
      "command": "service call iphonesubinfo 3 2>/dev/null | grep -q 'PIN' && echo ENABLED || echo DISABLED",
      "safe_pattern": "ENABLED",
      "level": "warning",
      "description": "SIM PIN lock prevents unauthorized SIM use"
    },
    {
      "category": "SIM SECURITY",
      "label": "SIM Operator",
      "command": "getprop gsm.operator.alpha",
      "safe_pattern": ".+",
      "level": "info",
      "description": "Current mobile operator"
    },
    {
      "category": "SIM SECURITY",
      "label": "Dual SIM Status",
      "command": "getprop persist.radio.multisim.config",
      "safe_pattern": ".*",
      "level": "info",
      "description": "Dual SIM configuration"
    },
    {
      "category": "SIM SECURITY",
      "label": "eSIM Profiles",
      "command": "pm list packages | grep -i esim",
      "safe_pattern": ".*",
      "level": "info",
      "description": "eSIM management apps present"
    },
    {
      "category": "SIM SECURITY",
      "label": "Carrier Lock Status",
      "command": "getprop persist.sys.oem_unlock_allowed 2>/dev/null",
      "safe_pattern": ".*",
      "level": "info",
      "description": "Carrier/network lock status"
    }
  ]
}
