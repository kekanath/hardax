{
  "checks": [
    {
      "category": "TEE/TPM",
      "label": "TEE Driver Presence",
      "command": "[ -e /dev/tee0 ] || [ -e /dev/trusty-ipc-dev0 ] && echo PRESENT || echo ABSENT",
      "safe_pattern": "^PRESENT$",
      "level": "warning",
      "description": "TEE driver (Trusted Execution Environment) should exist on modern secure devices"
    },
    {
      "category": "TEE/TPM",
      "label": "TPM Keystore Presence",
      "command": "[ -d /data/misc/keystore ] && echo PRESENT || echo ABSENT",
      "safe_pattern": "^PRESENT$",
      "level": "info",
      "description": "Checks for hardware-backed keystore modules"
    },
    {
      "category": "TEE/TPM",
      "label": "TEE Vendor Prop",
      "command": "getprop | grep -i tee",
      "safe_pattern": ".*",
      "level": "info",
      "description": "Shows any TEE-related properties"
    }
  ]
}